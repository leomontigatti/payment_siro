<odoo>
    <record id="view_payment_acquirer_siro_form" model="ir.ui.view">
        <field name="name">payment.acquirer.siro.form</field>
        <field name="model">payment.acquirer</field>
        <field name="arch" type="xml">
            <form string="SIRO Configuration">
                <group>
                    <field name="provider"/>
                    <field name="siro_user"/>
                    <field name="siro_password" password="True"/>
                    <field name="siro_api_key" readonly="1"/>
                    <field name="siro_date_range"/>
                </group>
            </form>
        </field>
    </record>
</odoo>
